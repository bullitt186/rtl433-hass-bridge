# RTL_433 MQTT Home Assistant Bridge Configuration
# Copy this file to .env and customize the values

# MQTT Broker Configuration (Required)
MQTT_HOST=192.168.1.100
MQTT_PORT=1883
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=your_password_here

# RTL_433 Configuration
RTL_TOPIC=rtl_433/+/events
DEVICE_TOPIC_SUFFIX=devices[/type][/model][/subtype][/channel][/id]

# Home Assistant Configuration
DISCOVERY_PREFIX=homeassistant
DISCOVERY_INTERVAL=600
RETAIN=true
FORCE_UPDATE=false

# Optional: Device filtering (space-separated list of device IDs)
# DEVICE_IDS=123 456 789

# Optional: Sensor expiration (seconds)
# EXPIRE_AFTER=1800

# Logging Configuration
DEBUG=false
QUIET=false

# Timezone
TZ=America/New_York